# -----------------------------------------------------------------------------
# Docker Compose / Airflow Base Configuration
# -----------------------------------------------------------------------------
# Base directory path for Airflow project (used for volume mounts)
# Default: /home/deepakbablu667/airflow
# Change this to match your deployment path
AIRFLOW_PROJ_DIR=/home/deepakbablu667/airflow

# Airflow User ID (for file permissions)
# Default: 50000
AIRFLOW_UID=50000

# Airflow Home directory (inside containers)
# Default: /opt/airflow
AIRFLOW_HOME=/opt/airflow

# -----------------------------------------------------------------------------
# Airflow Web UI Credentials
# -----------------------------------------------------------------------------
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# -----------------------------------------------------------------------------
# Kafka Configuration
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=pkc-41p56.asia-south1.gcp.confluent.cloud:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISMS=PLAIN
KAFKA_SASL_USERNAME=YOUR_KAFKA_USERNAME
KAFKA_SASL_PASSWORD=YOUR_KAFKA_PASSWORD
KAFKA_SESSION_TIMEOUT_MS=45000
KAFKA_CLIENT_ID=ccloud-python-client-346f0024-b81a-49f2-b234-3dd6aa7a90ee
